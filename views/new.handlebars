<div class="col-md-8 m-auto">
  <form action="/records/new" method="POST">
    <div class="row mb-4">
      <div class="col-4">
        <p>*必填欄位</p>
      </div>
      <div class="col-8">
        <h2>請輸入您的支出</h2>
      </div>
    </div>
    <div class="card card-body">
      <div class="from-group row mb-3">
        <div class="col-3">
          <label for="name" style="margin-top: 5px;">名稱*</label>
        </div>
        <div class="col-8">
          <input type="text" class="form-control" name="name" placeholder="請輸入事件名稱" id="name" required>
        </div>
      </div>

      <div class="from-group row mb-3">
        <div class="col-3">
          <label for="date" style="margin-top: 5px;">日期*</label>
        </div>
        <div class="col-8">
          <input type="date" name="date" class="form-control" id="date" value="" required>
        </div>
      </div>

      <div class="from-group row mb-3">
        <div class="col-3">
          <label for="category" style="margin-top: 5px;">類別*</label>
        </div>
        <div class="col-8">
          <select class="form-control" id="category" name="category" required>
            <option value="家居物業">家居物業</option>
            <option value="交通出行">交通出行</option>
            <option value="休閒娛樂">休閒娛樂</option>
            <option value="餐飲食品">餐飲食品</option>
            <option value="其它">其它</option>
          </select>
        </div>
      </div>


      <div class="from-group row mb-3">
        <div class="col-3">
          <label for="amount" style="margin-top: 5px;">金額*</label>
        </div>
        <div class="col-8">
          <input type="number" name="amount" class="form-control" id="amount" value="" placeholder="請輸入花費金額" required>
        </div>
      </div>

      <button type="submit" class="btn btn-outline-primary btn-block mt-4">新增支出</button>
    </div>
  </form>
</div>